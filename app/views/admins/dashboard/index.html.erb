<div class="row">
    <div class="col-md-4">
        <h4>Usuários</h4>
        <table class="table table-striped table-bordered table-inverse table-hover">    
            
            <thead>
            <tr>                
                <th>Nome</th>
                <th>Email</th>                
            </tr>
            </thead>
            <% @users.each do |user| %>
            <tr>
                <td><%= user.name%></td>
                <td><%= user.email%></td>                
            </tr>   
            <% end %>           
        </table>        
        
    </div>
    <div class="col-md-4">
        <h4>Leilões</h4>
        <table class="table table-striped table-bordered table-inverse table-hover">
            <tr>                
                <th>Nome</th>
                <th>Itens</th>
                <th>Status</th>                                
            </tr>
            <% @auctions.each do |auction|  %>
            <tr>
                <td><%= auction.title %></td>
                <td>XX  </td>
                <td>XXX </td>                
            </tr>              
            <% end %>
        </table>        
    </div>
    <div class="col-md-4">
        <h4>Produtos</h4>
        <table class=" table-hover table table-striped table-bordered table-inverse">
            <tr>
                <th>Nome</th>                
                <th>Preço Inicial</th>
                <th>Último lance</th>                
            </tr>
            <% @products.each do |product|%>
            <tr>                
                
                <td><%= product.name%>  </td>
                <td><%= product.price%> </td>
                <td>XXXX</td>
                
            </tr>              
            <% end %>
        </table>        
    </div>
</div>

