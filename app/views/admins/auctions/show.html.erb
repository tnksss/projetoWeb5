    <!-- Page Content -->
      <!-- Portfolio Item Heading -->
      <div class="row">
        <div class="col-md-8">
          <h2><%= @auction.title %></h1>    
        </div>
        <div class="col-md-4 align-right">
          <%= link_to "Edit", edit_admins_auction_url(@auction.id), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', admins_auction_path(@auction.id),
                              data: {confirm: 'Voce tem certeza que deseja apagar?'},
                              :method => :delete,
                              class: 'btn btn-sm btn-danger' %>  
        </div>
        
      </div>
      

      <!-- Portfolio Item Row -->
      <div class="row">
          <div class="col-md-8">
             <% if !@auction.image.blank? %>
                <%= image_tag(@auction.image.url(:medium)  , :style => "max-height: 430px !important") %>
                
             <% else %>
                <img src="/images/fallback/default.png">
             <% end %>   
          </div>
          <div class="col-md-4">
            <h4 class="my-3"><strong>Status:</strong></h4>
            <h3> ABERTO</h3>
            
            <h4> <strong>Quantidade de Produtos: </strong></h4><h3> 20 </h3>
            <table class="table table-striped table-bordered ">
	            <thead class="table-inverse">
              <tr>
	            	<th>Nome</th>
	            	<th>Lance</th>
	            </tr>
              </thead>
	            <tr>
	            	<td>João da Silva</td>
	            	<td>R$ 100,00</td>	            	
	            </tr>
	            <tr>
	            	<td>Maria Santos</td>
	            	<td>R$ 95,00</td>
	            </tr>
            </table>          
          </div>
      </div>
      <!-- /.row -->
      <!-- Related Projects Row -->
      
        <h3 class="my-4">Produtos neste leilão</h3>
        <table class="table table-striped table-bordered ">
        <tr>
        
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Estado</th>
            <th>Ações</th>
        </tr>
        <% @products.each do |product| %>
        <tr>
            
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.state %></td>
        
            <td>
                <div class="">
                    <%= link_to "Show", admins_product_url(product.id), class: 'btn btn-sm btn-info' %>
                    <%= link_to "Edit", edit_admins_product_url(product.id), class: 'btn btn-sm btn-warning' %>
                    <%= link_to 'Delete', admins_product_path(product.id),
                                       data: { confirm: 'Voce tem certeza que deseja apagar?' },
                                        :method => :delete,
                                        class: 'btn btn-sm btn-danger' %>

                </div>
            </td>
        </tr>
    <% end %>      
