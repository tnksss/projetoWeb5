
<h3>Produtos</h3>
<div class="row">
    <%= link_to "Cadastrar", new_admins_product_url, class: 'btn btn-lg btn-primary' %>
</div>

<table class="table table-bordered">
    <tr>
        
        <th>Id</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Estado</th>
        <th>Valor</th>
        <th>Ações</th>
    </tr>
<% @products.each do |product| %>
    <tr>
        
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.state %></td>
        <td>...</td>
        <td>
            <div class="">
                <%= link_to "Show", admins_product_url(product.id), class: 'btn btn-sm btn-info' %>
                <%= link_to "Edit", edit_admins_product_url(product.id), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', admins_product_path(product.id),
                                   data: { confirm: 'Voce tem certeza que deseja apagar?' },
                                    :method => :delete,
                                    class: 'btn btn-sm btn-danger' %>

            </div>
        </td>
    </tr>
<% end %>      
</table>

