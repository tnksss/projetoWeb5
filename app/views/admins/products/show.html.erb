    <!-- Page Content -->
      <!-- Portfolio Item Heading -->
      <div class="row">
        <div class="col-md-8">
          <h2><%= @product.name %></h1>    
        </div>
        <div class="col-md-4 align-right">
          <%= link_to "Edit", edit_admins_product_url(@product.id), class: 'btn btn-sm btn-warning' %>
          <%= link_to 'Delete', admins_product_path(@product.id),
                              data: {confirm: 'Voce tem certeza que deseja apagar?'},
                              :method => :delete,
                              class: 'btn btn-sm btn-danger' %>  
        </div>
        
      </div>
      

      <!-- Portfolio Item Row -->
      <div class="row">
          <div class="col-md-8">
             <% if !@product.images.first.blank? %>
                <%= image_tag(@product.images.first.url(:medium)  , :style => "max-height: 430px !important") %>
             <% else %>
                <img src="/images/fallback/default.png">
             <% end %>   
          </div>
          <div class="col-md-4">
            <h3 class="my-3">Descrição</h3>
            <p><%= @product.description %></p>
            <h5><strong>Preço: </strong><%= @product.price %></h5>
            <h5> <strong>Lances: </strong></h5>
            <table class="table table-bordered">
	            <tr>
	            	<th>Nome</th>
	            	<th>Lance</th>
	            </tr>
	            <tr>
	            	<td>João da Silva</td>
	            	<td>R$ 100,00</td>	            	
	            </tr>
	            <tr>
	            	<td>Maria Santos</td>
	            	<td>R$ 95,00</td>
	            </tr>
            </table>          
          </div>
      </div>
      <!-- /.row -->
      <!-- Related Projects Row -->
      <h3 class="my-4">Mais Imagens</h3>

      <div class="row">
        <% @product.images.each do |image| %>
        <div class="col-md-3 col-sm-6 mb-4">
            <a href="#">
             <%= image_tag(image.url(:medium)  , :style => "max-height: 130px !important") %>
            </a>
          </div>
        <% end %>          
      </div>
      
    <!-- /.row -->    

